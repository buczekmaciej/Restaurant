{% extends 'base.html.twig' %}

{% block title %}Johnny's
{% endblock %}

{% block stylesheets %}
    {{parent()}}

    <link href="{{asset('styles/app.css')}}" rel="stylesheet">
{% endblock %}

{% block nav %}
    <nav class="nav">
        <div class="label">
            <a href="{{path('homepage')}}">Johnny's</a>
        </div>
        <div class="links">
            <a href="{{path('meals')}}">Meals</a>
            <a href="{{path('order')}}">Order</a>
        </div>
    </nav>
{% endblock %}


{% block body %}
    <article class="greet">
        <section class="content">
            <h2>Welcome to Johnny's restaurant</h2>
            <p>Best restaurant in state</p>
        </section>
    </article>

    <article class="details">
        <section class="location">
            <span>
                <i class="fas fa-map-marker-alt"></i>
                3425 Maple Ave, Los Angeles
            </span>
            <span>
                <i class="fas fa-map-marker-alt"></i>
                231 Parthenia St, Los Angeles
            </span>
            <span>
                <i class="fas fa-map-marker-alt"></i>
                3425 Oak St, San Francisco
            </span>
            <span>
                <i class="fas fa-map-marker-alt"></i>
                343 24th St, San Francisco
            </span>
        </section>
        <section class="work-hours">
            {% set status = '' %}
            {% if "now"|date('l') != 'Sunday' %}
                {% if "now"|date('l') != 'Saturday' %}
                    {% if 'now'|date('H:i:s') > '08:00:00' and 'now'|date('H:i:s') < '22:00:00' %}
                        {% set status = 'open' %}
                    {% else %}
                        {% set status = 'closed' %}
                    {% endif %}
                {% else %}
                    {% if 'now'|date('H:i:s') > '10:00:00' and 'now'|date('H:i:s') < '20:00:00' %}
                        {% set status = 'open' %}
                    {% else %}
                        {% set status = 'closed' %}
                    {% endif %}
                {% endif %}
            {% else %}
                {% set status = 'closed' %}
            {% endif %}
            <p class="status {{status}}">
                <i class="fas fa-clock"></i>
                {{status|capitalize}}
            </p>

            <span class="hours">
                <p>
                    <span>Monday - Friday</span>
                    <span>8:00 AM - 10:00PM</span>
                </p>
                <p>
                    <span>Saturday</span>
                    <span>10:00 AM - 8:00PM</span>
                </p>
                <p>
                    <span>Sunday</span>
                    <span>Closed</span>
                </p>
            </span>
        </section>
    </article>
{% endblock %}


{% block foot %}
    <footer class="foot">
        <div class="contact">
            <a class="phone" href="tel:111-222-333">
                <i class="fas fa-phone"></i>
                111-222-333
            </a>
        </div>
        <div class="copy">
            <p>&copy;
                {{"now"|date('Y')}}
                Johnny's
            </p>
            <span>All rights reserved</span>
        </div>
    </footer>
{% endblock %}
